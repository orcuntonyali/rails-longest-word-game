<div class="container">
  <h1>New game</h1>

  <div class="d-flex">
    <% @letters.each do |letter| %>
      <div class="bg-primary text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; margin-right: 8px;">
        <%= letter %>
      </div>
    <% end %>
  </div>

  <p class="form-prefix mt-3">What is the longest word you can find?</p>

  <form action="/score" method="POST" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <div class="input-group">
      <input type="text" name="word" class="form-control">
      <input type="submit" value="Play" class="btn btn-primary">
    </div>
  </form>
</div>
